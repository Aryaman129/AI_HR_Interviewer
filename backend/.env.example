# Application Settings
APP_NAME="AI-HR Automation Platform"
APP_VERSION="0.1.0"
DEBUG=true

# Database (PostgreSQL)
POSTGRES_USER=aihr_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aihr_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AI Services
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
# Ollama Cloud API Key - Get yours at https://ollama.com/settings/keys
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_CLOUD_URL=https://ollama.com

# Google Gemini (Fallback LLM) - Get your API key at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

SPACY_MODEL=en_core_web_lg
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
WHISPER_MODEL=base

# Storage (Cloudflare R2) - Optional
# R2_ACCESS_KEY_ID=your_access_key
# R2_SECRET_ACCESS_KEY=your_secret_key
# R2_BUCKET_NAME=aihr-storage
# R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# Twilio (Voice/SMS/WhatsApp) - Optional
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=your_phone_number

# SendGrid (Email) - Optional
# SENDGRID_API_KEY=your_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# n8n - Optional
N8N_HOST=http://localhost:5678
# N8N_API_KEY=your_n8n_api_key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
